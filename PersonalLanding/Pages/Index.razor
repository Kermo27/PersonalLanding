@page "/"

<NavMenu />

<header class="hero">
    <div class="hero-content animate-fade">
        <h1>My Business</h1>
        <p>Professional Services for You</p>
        <a href="#services" class="btn">Explore Services</a>
    </div>
</header>

<section id="services" class="section">
    <h2>Services</h2>
    <div class="cards">
        <div class="card animate-fade-up">
            <i class="fas fa-code fa-3x"></i>
            <h3>Web Development</h3>
            <p>High-quality modern web applications.</p>
        </div>
        <div class="card animate-fade-up" style="animation-delay: 0.2s;">
            <i class="fas fa-paint-brush fa-3x"></i>
            <h3>UI/UX Design</h3>
            <p>Beautiful and user-friendly interfaces.</p>
        </div>
        <div class="card animate-fade-up" style="animation-delay: 0.4s;">
            <i class="fas fa-chart-line fa-3x"></i>
            <h3>Digital Marketing</h3>
            <p>Grow your business online effectively.</p>
        </div>
    </div>
</section>

<section id="pricing" class="section">
    <h2>Pricing</h2>
    <div class="pricing-cards">

        <div class="pricing-card animate-fade-up">
            <i class="fas fa-leaf fa-3x icon-blue"></i>
            <h3>Basic</h3>
            <p class="price">$100</p>
            <ul>
                <li>Feature A</li>
                <li>Feature B</li>
            </ul>
            <a href="#contact" class="btn-pricing">Choose</a>
        </div>

        <div class="pricing-card featured animate-fade-up" style="animation-delay: .2s;">
            <span class="badge">Most Popular</span>
            <i class="fas fa-rocket fa-3x icon-purple"></i>
            <h3>Standard</h3>
            <p class="price">$200</p>
            <ul>
                <li>Feature A</li>
                <li>Feature B</li>
                <li>Feature C</li>
            </ul>
            <a href="#contact" class="btn-pricing">Choose</a>
        </div>

        <div class="pricing-card animate-fade-up" style="animation-delay: .4s;">
            <i class="fas fa-crown fa-3x icon-blue"></i>
            <h3>Premium</h3>
            <p class="price">$300</p>
            <ul>
                <li>All Features</li>
            </ul>
            <a href="#contact" class="btn-pricing">Choose</a>
        </div>

    </div>
</section>

<section id="about" class="section">
    <h2>About Us</h2>
    <p class="animate-fade-up">We are a passionate team delivering top-notch solutions. Our mission is to help your business grow with professional services and beautiful design.</p>
</section>

<section id="contact" class="section">
    <h2>Contact</h2>
    <form class="contact-form animate-fade-up">
        <input type="text" placeholder="Name" />
        <input type="email" placeholder="Email" />
        <textarea placeholder="Message"></textarea>
        <button type="submit">Send Message</button>
    </form>
</section>
